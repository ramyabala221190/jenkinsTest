/* groovylint-disable NestedBlockDepth */
pipeline{

    agent any

    stages{
        stage('Docker Workflow'){
            stages{
                // stage('Clone') {
                //     steps {
                //         echo 'Cloning...'
                //         cleanWs() //Workspace Clean Plugin to delete the workspace before cloning and building
                //         //we are using the installed Git plugin to clone the branch from the repo
                //         git branch: "${env.Branch}", changelog: false,
                //         credentialsId: 'b2b655c9-f74f-4813-8dfd-f2a565931b80',
                //         poll: false, url: 'https://github.com/ramyabala221190/jenkinsTest.git'
                //     }
                //     post {
                //         success {
                //             echo 'Clone step completed'
                //         }
                //     }
                // }

                stage('Docker Build') {
                    steps {
                        echo 'Building'
                        bat "docker build https://github.com/ramyabala221190/jenkinsTest.git#${env.Branch} -t jenkins-test-${environment} --build-arg env=${environment}"
                    }
                
                }
                stage('Docker Run in Prod') {
                    when {
                        
                        environment name: 'environment', value: 'prod'
                    }
                    steps {
                        echo 'Running'
                        // bat 'docker ps -q --filter "name=jenkins-test-container" | xargs -r docker stop'                       
                        // bat 'docker ps -aq --filter "name=jenkins-test-container" | xargs -r docker rm'
                        bat "docker run --name jenkins-test-container -dp 8083:80 -it jenkins-test-${environment}"
                    }
                
                }
                stage('Docker Run in Dev') {
                    when {
                        environment name: 'environment', value: 'dev'
                    }
                    steps {
                        echo 'Running'
                        // bat 'docker ps -q --filter "name=jenkins-test-container" | xargs -r docker stop'                       
                        // bat 'docker ps -aq --filter "name=jenkins-test-container" | xargs -r docker rm'
                        bat "docker run --name jenkins-test-container -dp 8082:80 -it jenkins-test-${environment}"
                    }
                
                }
            }
        }
    }
}